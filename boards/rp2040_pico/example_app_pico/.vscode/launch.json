{
    /*
     * Requires the Cortex-Debug extension
     * https://marketplace.visualstudio.com/items?itemName=marus25.cortex-debug
     */
    "version": "0.2.0",
    "configurations": [
        {
            "type": "cortex-debug",
            "request": "attach",
            "name": "Attach to Running App (Halt)",
            "servertype": "openocd",
            "cwd": "${workspaceRoot}",
            "executable": "./build/example_app_pico.elf",
            "device": "RP2040",
            "configFiles": [
                "interface/cmsis-dap.cfg",
                "target/rp2040.cfg"
            ],
            "svdFile": "${env:PICO_SDK_PATH}/src/rp2040/hardware_regs/RP2040.svd",
            "showDevDebugOutput": "parsed",
            "overrideAttachCommands": [
                "monitor halt",
                "file ./build/example_app_pico.elf",
                "set mem inaccessible-by-default off",
                "set remotetimeout 60"
            ]
        },
        {
            "type": "cortex-debug",
            "request": "attach",
            "name": "Attach to Running App (Continue)",
            "servertype": "openocd",
            "cwd": "${workspaceRoot}",
            "executable": "./build/example_app_pico.elf",
            "device": "RP2040",
            "configFiles": [
                "interface/cmsis-dap.cfg",
                "target/rp2040.cfg"
            ],
            "svdFile": "${env:PICO_SDK_PATH}/src/rp2040/hardware_regs/RP2040.svd",
            "showDevDebugOutput": "parsed",
            "overrideAttachCommands": [
                "monitor halt",
                "file ./build/example_app_pico.elf",
                "set mem inaccessible-by-default off",
                "set remotetimeout 60",
                "continue"
            ]
        },
        {
            "type": "cortex-debug",
            "request": "launch",
            "name": "Flash and Debug",
            "servertype": "openocd",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "Build",
            "runToEntryPoint": "main",
            "executable": "./build/example_app_pico.elf",
            "device": "RP2040",
            "configFiles": [
                "interface/cmsis-dap.cfg",
                "target/rp2040.cfg"
            ],
            "svdFile": "${env:PICO_SDK_PATH}/src/rp2040/hardware_regs/RP2040.svd",
            "showDevDebugOutput": "parsed",
            "postRestartCommands": [
                "monitor reset init",
                "monitor halt",
                "set mem inaccessible-by-default off",
                "set remotetimeout 60"
            ]
        },
        {
            "type": "cortex-debug",
            "request": "launch",
            "name": "Reset via Bootloader and Debug",
            "servertype": "openocd",
            "cwd": "${workspaceRoot}",
            "runToEntryPoint": "main",
            "executable": "./build/example_app_pico.elf",
            "device": "RP2040",
            "configFiles": [
                "interface/cmsis-dap.cfg",
                "target/rp2040.cfg"
            ],
            "svdFile": "${env:PICO_SDK_PATH}/src/rp2040/hardware_regs/RP2040.svd",
            "showDevDebugOutput": "parsed",
            "overrideLaunchCommands": [
                "monitor reset init",
                "monitor halt",
                "set mem inaccessible-by-default off",
                "set remotetimeout 60",
                "break main",
                "continue"
            ]
        }
    ]
}
