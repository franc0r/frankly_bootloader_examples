{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Cleanup",
            "type": "shell",
            "command": "rm",
            "args": ["-rf", "build"],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [],
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "mkdir -p build && cd build && cmake .. && make -j 8",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": false
            },
        }
    ]
}